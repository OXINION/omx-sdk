{
  "name": "omx-sdk",
  "version": "1.0.0",
  "description": "Modular SDK for Oxinion Marketing Exchange",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "publish-packages": "pnpm build && changeset publish",
    "version-packages": "changeset version",
    "prepack": "pnpm build",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "oxinion",
    "marketing",
    "exchange",
    "omx",
    "sdk",
    "geotrigger",
    "email",
    "webhook",
    "beacon",
    "push-notification"
  ],
  "author": "Oxinion",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/oxinion/omx-sdk.git"
  },
  "homepage": "https://github.com/oxinion/omx-sdk#readme",
  "bugs": {
    "url": "https://github.com/oxinion/omx-sdk/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  }
}
